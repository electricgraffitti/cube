<head>
  <%= render :partial => "layouts/headmeta" %>
  <link rel="stylesheet" type="text/css" href="http://yui.yahooapis.com/2.8.0r4/build/assets/skins/sam/skin.css">
  <%= yield :head %>
</head>
<body>
  <%= render :partial => 'layouts/flash', :locals => {:flash => flash} %>
  <!-- Application Layout -->
  <!-- header sections -->
  <div id="mast_header">
    <header id="hd">
	    <%= link_to '<div id="logo"></div>', root_path, :alt => "Cube2Media" %>
      <%= render :partial => "layouts/header" %>
	  </header>
  </div>
  <!-- main content section -->
  <div id="mast_main_content">
    <div id="main_content" class="container_12">
      <%= yield %>
      <div class="clearfix"></div>
    </div>
  </div>
  <div id="mast_footer">
    <footer>
      <%= render :partial => "layouts/footer" %>
    </footer>
  </div>
	<%= render :partial => "layouts/scripts" %>
	<script>
    $(document).ready(function() {
    	// injects flash div into dom
    	flash.injectFlashBox();
    	flash.setFlash();
    	// admin.yuiTextEditor();
    	admin.adminDatatables();
    });
  </script>
  </div>
</body>
</html>