<% content_for :title do %>
  Web design tutorials and tips
<% end %>
<% content_for :banner do  %>
  <div class="banner_content">
    <h2 class="banner_text header_white">
    Knowledge - Think Ahead - Stay Ahead
    </h2>
  </div>
<% end %>
<%= will_paginate @blogs %>
<% form_tag blogs_path, :method => 'get' do %>
	<p class="search">
		<%= text_field_tag :search, params[:search] %>
		<%= submit_tag "Search", :name => nil %>
	</p>
<% end %>

<% @blogs.each do |blog| %>
 <%= render :partial => 'blogs/blog_banner', :locals => {:blog => blog}%>
<% end %>

<% content_for :sub_boxes do  %>
	<%= render :partial => 'layouts/sub_boxes' %>
<% end %>

<%= will_paginate @blogs %>


