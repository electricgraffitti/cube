<% form_for(@blog) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :sub_title %><br />
    <%= f.text_field :sub_title %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content, :rows => 10, :cols => 48 %>
  </p>
  
  <p>
    <% for asset in @blog.assets %>
    <% fields_for "blog[attachments][]", asset do |asset_form| %>
    <%= asset_form.label "Add Image"  %><br/>
    <%= asset_form.file_field :attachment, :size => 16, :index => nil %>
      <% unless asset.new_record? %>
        <%= asset_form.hidden_field :id, :index => nil %>
      <% end %>
    <% end %>
  <% end %>
  </p>
  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>