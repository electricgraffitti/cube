<% content_for :banner do  %>
  <div class="banner_content">
    <h2 class="banner_text header_white">
    Web Development. It's What We Do.
    </h2>
  </div>
<% end %>

<div class="full_row">
	<div class="contact_form_style">
  	<h3>Get in touch with the Cube2 Team.</h3>
  	<% form_tag(contact_mailer_path, :id => "contact_form") do %>
  	<div class="column_3">    
    	<div>
      	<%= label :contact, :first_name, "* First Name" %><br />
      	<%= text_field :contact, :first_name, :name => "contact_first_name" %>
    	</div>
    	<div>
      	<%= label :contact, :last_name, "* Last Name" %><br />
      	<%= text_field :contact, :last_name, :name => "contact_last_name" %>
    	</div>
    	<div>
      	<%= label :contact, :email, "* Email Address" %><br />
      	<%= text_field :contact, :email, :name => "contact_email" %>
    	</div>
    	<div>
      	<%= label :contact, :phone, "Phone Number" %><br />
      	<%= text_field :contact, :phone, :name => "contact_phone" %>
    	</div>
  	</div>
  	<div class="column_3">
  		<div>
      	<%= label :contact, :body, "Message" %><br />
      	<%= text_area :contact, :body, :name => "contact_message", :rows => 9, :cols => 42 %>
    	</div>
    	<div>
      	<%= submit_tag 'Submit', :class => "btn" %>
  		</div>
  	</div>
  	<% end %>
	</div>
</div>
	<div class="full_row_contact">
	    	<div class="form_comment">
    	Need more detailed information for your project? See our quote form  <%= link_to "here.", project_contact_path %>
  	</div>
	  <h4 class="">Salt Lake City :: 801.381.4974 | Las Vegas :: 702.835.2823 | info@cube2media.com</h4>
	</div>

<% content_for :sub_boxes do  %>
	<%= render :partial => 'layouts/sub_boxes' %>
<% end %>
