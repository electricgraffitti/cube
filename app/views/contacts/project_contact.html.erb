<% content_for :banner do  %>
  <div class="banner_content">
    <h2 class="banner_text header_white">
    Got a Project? Lets Talk Solutions.
    </h2>
  </div>
<% end %>

<div class="full_row">
	<div class="project_form_style">
  	<% form_tag(project_mailer_path, :id => "project_form") do %>
  	<div class="column_3">
    	<h3>Tell Us About You:</h3>    
    	<div>
      	<%= label :project, :first_name, "First Name *" %><br />
      	<%= text_field :project, :first_name, :name => "project_first_name" %>
    	</div>
    	<div>
      	<%= label :project, :last_name, "Last Name *" %><br />
      	<%= text_field :project, :last_name, :name => "project_last_name" %>
    	</div>
    	<div>
      	<%= label :project, :email, "Email Address *" %><br />
      	<%= text_field :project, :email, :name => "project_email" %>
    	</div>
    	<div>
      	<%= label :project, :phone, "Phone Number" %><br />
      	<%= text_field :project, :phone, :name => "project_phone" %>
    	</div>
    	<div>
      	<%= label :project, :company, "Company Name" %><br />
      	<%= text_field :project, :company, :name => "project_company" %>
    	</div>
    	<div>
      	<%= label :project, :url, "Existing Web Site Address" %><br />
      	<%= text_field :project, :url, :name => "project_url" %>
    	</div>
  	</div>
  	<div class="budget_column">
	  	<h3 class="contact">Budget:</h3>
	  	<h4 class="contact">Select one *</h4>
    	<div>
      	<%= radio_button_tag :project_budget, '5k', true %><b> < $5k</b>
    	</div>
    	<div>
      	<%= radio_button_tag :project_budget, '6k-10k', false %><b> $6k to $10k</b>
    	</div>
    	<div>
      	<%= radio_button_tag :project_budget, '11k-20k', false %><b> $11k to $20k</b>
    	</div>
    	<div>
      	<%= radio_button_tag :project_budget, '20k-50k', false %><b> $20k to $50k</b>
    	</div>
    	<div>
      	<%= radio_button_tag :project_budget, '50k+', false %><b> $50k +</b>
    	</div>
    	<h3 class="contact project">Project State:</h3>
    	<div>
	    	<%= radio_button_tag :project_state, 'new', true %><b> New Project</b>
	  	</div>
	  	<div>
	    	<%= radio_button_tag :project_state, 'existing', false %><b> Existing Project</b>
	  	</div>
	  	<div>
	    	<%= radio_button_tag :project_state, 'recurring', false %><b> Recurring Project</b>
	  	</div>
		</div>
		<div class="column_3">
			<h3>Tell Us About Your Project:</h3>
	  	<div>
	    	<%= radio_button_tag :project_specs, 'Corporate Marketing', true %><b> Corporate Marketing</b>
	  	</div>
	  	<div>
	    	<%= radio_button_tag :project_specs, 'Web Based Application', false %><b> Web Based Application</b>
	  	</div>
	  	<div>
	    	<%= radio_button_tag :project_specs, 'Ecommerce Application', false %><b> Ecommerce Application</b>
	  	</div>
	  	<div>
	    	<%= radio_button_tag :project_specs, 'Project Consulting', false %><b> Project Consulting</b>
	  	</div>
	  	<div class="comment_space">
	    	<%= radio_button_tag :project_specs, 'Design & Branding', false %><b> Design &#38; Branding</b>
	  	</div>
  		<div>
      	<%= label :project, :comments, "Additional Project Comments" %><br />
      	<%= text_area :project, :comments, :name => "comments", :rows => 9, :cols => 42 %>
    	</div>
    	<div>
      	<%= submit_tag 'Submit', :class => "btn" %>
  		</div>
  	</div>
  	<% end %>
	</div>
</div>
	<div class="full_row_contact">
	    	
	  <h4 class="">Salt Lake City :: 801.381.4974 | Las Vegas :: 702.835.2823 | info@cube2media.com</h4>
	</div>

<% content_for :sub_boxes do  %>
	<%= render :partial => 'layouts/sub_boxes' %>
<% end %>