<% form_for(@service, :html => {:multipart => true}) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :sub_title %><br />
    <%= f.text_field :sub_title %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.label :service_order, "Indexed Order" %><br />
    <%= f.text_field :service_order, :size => 3 %>
  </p>
  <p>
    <% for asset in @service.assets %>
    <% fields_for "service[attachments][]", asset do |asset_form| %>
    <%= asset_form.label "Add Image"  %><br/>
    <%= asset_form.file_field :attachment, :size => 16, :index => nil %>
      <% unless asset.new_record? %>
        <%= asset_form.hidden_field :id, :index => nil %>
      <% end %>
    <% end %>
  <% end %>
  </p>
  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>